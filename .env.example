# Required API settings
API_USERNAME=your_chaturbate_username
API_TOKEN=your_api_token

# (Optional) API settings
API_TIMEOUT=15
API_TESTBED=false

# Required InfluxDB settings
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-influx-token
INFLUXDB_ORG=my-org
INFLUXDB_BUCKET=my-bucket

# (Optional) InfluxDB init parameters
INFLUXDB_INIT_MODE=…
INFLUXDB_INIT_USERNAME=…
INFLUXDB_INIT_PASSWORD=…
INFLUXDB_INIT_ORG=…
INFLUXDB_INIT_BUCKET=…

# (Optional) Top‑level flags
USE_DATABASE=false
VERBOSE=false
