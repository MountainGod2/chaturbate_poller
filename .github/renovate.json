{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "rangeStrategy": "bump",
  "rebaseWhen": "auto",
  "labels": [
    "dependencies"
  ],
  "platformAutomerge": false,
  "internalChecksFilter": "strict",
  "internalChecksAsSuccess": false,
  "timezone": "America/Edmonton",
  "schedule": [
    "before 5am"
  ],
  "minimumReleaseAge": "3 days",
  "prHourlyLimit": 4,
  "prConcurrentLimit": 10,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies. Read the [Dependency Dashboard](https://docs.renovatebot.com/key-concepts/dashboard/) docs to learn more.",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "autoApprove": true,
    "schedule": [
      "at any time"
    ],
    "recreateWhen": "always"
  },
  "postUpgradeTasks": {
    "commands": [
      "uv sync --frozen || uv sync",
      "uv lock"
    ],
    "fileFilters": [
      "pyproject.toml"
    ],
    "executionMode": "update"
  },
  "pep723": {
    "enabled": true,
    "managerFilePatterns": [
      "/examples/.*\\.py$/",
      "/examples/.*\\.pyw$/"
    ]
  },
  "enabledManagers": [
    "docker-compose",
    "dockerfile",
    "github-actions",
    "pep723",
    "pep621",
    "pre-commit"
  ],
  "packageRules": [
    {
      "description": "Do not automerge major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "automerge": false,
      "assignees": [
        "MountainGod2"
      ]
    },
    {
      "description": "Automerge minor, patch updates and type definitions",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Do not change requires-python in pyproject.toml",
      "matchManagers": [
        "pep621"
      ],
      "ignoreDeps": [
        "python"
      ]
    },
    {
      "description": "Pin GitHub Actions to exact SHA",
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true,
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Group GitHub Actions updates",
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Group Docker updates",
      "groupName": "Docker",
      "matchDatasources": [
        "docker"
      ],
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Group python dependencies",
      "groupName": "python dependencies",
      "matchManagers": [
        "pep621"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Ignore minimum wait time for pep723 updates to this package",
      "matchManagers": [
        "pep723"
      ],
      "matchDepNames": [
        "chaturbate-poller"
      ],
      "minimumReleaseAge": "0"
    },
    {
      "description": "Group example script dependencies",
      "groupName": "example dependencies",
      "matchManagers": [
        "pep723"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchFileNames": [
        "/examples/.*\\.py$/",
        "/examples/.*\\.pyw$/"
      ],
      "automerge": true,
      "autoApprove": true
    }
  ],
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ],
    "assignees": [
      "MountainGod2"
    ],
    "automerge": false
  },
  "osvVulnerabilityAlerts": true,
  "pre-commit": {
    "enabled": true
  }
}