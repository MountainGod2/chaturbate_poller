{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		":dependencyDashboard",
		":semanticCommits",
		":enableVulnerabilityAlerts"
	],
	"fileMatch": [
		"examples/hue_light_control\\.py",
		"examples/chaturbate_poller_tray\\.pyw"
	],
	"semanticCommitType": "chore",
	"rangeStrategy": "bump",
	"rebaseWhen": "auto",
	"labels": [
		"dependencies"
	],
	"prHourlyLimit": 4,
	"prConcurrentLimit": 10,
	"minimumReleaseAge": "3 days",
	"internalChecksFilter": "strict",
	"timezone": "America/Edmonton",
	"schedule": [
		"before 5am"
	],
	"dependencyDashboard": true,
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true,
		"autoApprove": true,
		"schedule": [
			"before 6am"
		]
	},
	"packageRules": [
		{
			"description": "Automerge all minor and patch updates",
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"automerge": true,
			"autoApprove": true
		},
		{
			"description": "Do not automerge major updates",
			"matchUpdateTypes": [
				"major"
			],
			"labels": [
				"dependencies",
				"breaking"
			],
			"automerge": false,
			"assignees": [
				"@MountainGod2"
			]
		},
		{
			"description": "Type definitions",
			"groupName": "type definitions",
			"automerge": true,
			"autoApprove": true,
			"matchPackageNames": [
				"/^@types\\//"
			]
		}
	],
	"vulnerabilityAlerts": {
		"labels": [
			"security"
		],
		"assignees": [
			"@MountainGod2"
		]
	}
}
