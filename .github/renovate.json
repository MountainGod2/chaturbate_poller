{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboardAutoclose": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchDatasources": [
        "pypi"
      ],
      "groupName": "Python: Dependencies and Lockfile",
      "matchFileNames": [
        "pyproject.toml",
        "uv.lock",
        "docs/requirements.txt"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "matchCurrentVersion": "!/^0/"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Docker: Base Images and Dependencies",
      "schedule": [
        "before 3am on the first day of the month"
      ],
      "automerge": false
    }
  ],
  "dockerfile": {
    "fileMatch": [
      "Dockerfile"
    ],
    "automerge": false
  },
  "labels": [
    "dependencies"
  ],
  "timezone": "America/Edmonton"
}
