{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "semanticCommitType": "chore",
  "rangeStrategy": "bump",
  "rebaseWhen": "auto",
  "labels": [
    "dependencies"
  ],
  "platformAutomerge": false,
  "internalChecksFilter": "strict",
  "internalChecksAsSuccess": false,
  "timezone": "America/Edmonton",
  "schedule": [
    "before 5am"
  ],
  "minimumReleaseAge": "3 days",
  "prHourlyLimit": 4,
  "prConcurrentLimit": 10,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Dependency Dashboard",
  "dependencyDashboardHeader": "This issue lists Renovate updates and detected dependencies. Read the [Dependency Dashboard](https://docs.renovatebot.com/key-concepts/dashboard/) docs to learn more.",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "autoApprove": true,
    "schedule": [
      "at any time"
    ],
    "recreateWhen": "always"
  },
  "pep723": {
    "enabled": true,
    "managerFilePatterns": [
      "/examples/.*\\.py$/",
      "/examples/.*\\.pyw$/"
    ]
  },
  "packageRules": [
    {
      "description": "Do not automerge major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "dependencies",
        "breaking"
      ],
      "automerge": false,
      "assignees": [
        "@MountainGod2"
      ]
    },
    {
      "description": "Automerge minor, patch updates and type definitions",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Block all Python version updates (requires-python)",
      "matchManagers": [
        "pep621"
      ],
      "matchDepNames": [
        "python"
      ],
      "matchFileNames": [
        "pyproject.toml"
      ],
      "enabled": false
    },
    {
      "description": "Automerge type definitions (excluding major updates)",
      "groupName": "type definitions",
      "matchPackageNames": [
        "/^@types\\//"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Pin GitHub Actions to exact SHA",
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "description": "Group GitHub Actions updates (excluding major updates)",
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Group Docker updates",
      "groupName": "Docker",
      "matchDatasources": [
        "docker"
      ],
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Group main production dependencies",
      "groupName": "production dependencies",
      "matchManagers": [
        "pep621"
      ],
      "matchDepTypes": [
        "dependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "description": "Group development dependencies",
      "groupName": "dev dependencies",
      "matchManagers": [
        "pep621"
      ],
      "matchDepTypes": [
        "dev"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Group documentation dependencies",
      "groupName": "docs dependencies",
      "matchManagers": [
        "pep621"
      ],
      "matchDepTypes": [
        "docs"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Group build dependencies",
      "groupName": "build dependencies",
      "matchManagers": [
        "pep621"
      ],
      "matchDepTypes": [
        "build"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "description": "Ignore minimum wait time for pep723 updates to this package",
      "matchManagers": [
        "pep723"
      ],
      "matchDepNames": [
        "chaturbate-poller"
      ],
      "minimumReleaseAge": "0"
    },
    {
      "description": "Group example script dependencies",
      "groupName": "example dependencies",
      "matchManagers": [
        "pep723"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "suppressNotifications": [
    "prIgnoreNotification"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security",
      "dependencies"
    ],
    "assignees": [
      "@MountainGod2"
    ],
    "automerge": false
  },
  "osvVulnerabilityAlerts": true,
  "pre-commit": {
    "enabled": true
  }
}
