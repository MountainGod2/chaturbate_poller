{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"labels": [
		"dependencies"
	],
	"assigneesFromCodeOwners": true,
	"packageRules": [
		{
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchCurrentVersion": "!/^0/",
			"automerge": true
		}
	]
}
